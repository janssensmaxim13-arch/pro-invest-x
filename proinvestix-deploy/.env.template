# ============================================================================
# ProInvestiX Enterprise - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in the values

# =============================================================================
# DATABASE
# =============================================================================
DB_USER=proinvestix
DB_PASSWORD=your_secure_password_here
DB_NAME=proinvestix
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your_super_secret_key_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# APPLICATION
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=https://proinvestix.com,https://www.proinvestix.com

# =============================================================================
# API
# =============================================================================
API_V1_PREFIX=/api/v1
PROJECT_NAME=ProInvestiX Enterprise
VERSION=1.0.0

# =============================================================================
# FRONTEND
# =============================================================================
NEXT_PUBLIC_API_URL=https://api.proinvestix.com/api/v1
NEXT_PUBLIC_APP_NAME=ProInvestiX Enterprise
NEXT_PUBLIC_APP_URL=https://proinvestix.com

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@proinvestix.com
# SMTP_PASSWORD=your_smtp_password

# SENTRY_DSN=https://xxx@sentry.io/xxx

# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_REGION=eu-west-1
# S3_BUCKET=proinvestix-uploads

# =============================================================================
# DESKTOP APP (Tauri)
# =============================================================================
TAURI_PRIVATE_KEY=your_private_key_for_updates
TAURI_KEY_PASSWORD=your_key_password
UPDATE_SERVER_URL=https://releases.proinvestix.com
